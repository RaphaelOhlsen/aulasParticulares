{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <table width="100%">
      <thead>
        <tr>
          <th>Professor</th>
          <th>Matéria</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
          <tr>
            <td>
              <span style="background-image: url({{student.avatar_url}})">
              </span>
              {{student.name}}
            </td>
            <td>
              {% for area in student._areas %}
                <span class="area">{{ area }}</span>
              {% endfor %}
            </td>
            <td><a href="/students/{{student.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}