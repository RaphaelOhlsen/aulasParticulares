{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
  <section 
    class="avatar"
    style="background: url({{ instructor.avatar_url }})"
  ></section>
  <section class="details">

    <h3>Detalhes</h3>

    <div class="item">
      <div>Professor</div>
      <div>{{ teacher.name }}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{ teacher.birth }}</div>
    </div>

     <div class="item">
      <div>Grau de Escolaridade</div>
      <select name="select">
        {% for graduate in teacher.graduates %}
          <option 
            value="{{ gradueted.value }}" 
            {% if graduate.selected %}
              selected="selected"
            {% endif %}
          >
            {{ graduate.description }}
          </option>
        {% endfor %}
      </select>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      {% for service in instructor.services %}
      <span>{{ service }}</span>
      {% endfor %}

    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{ instructor.created_at }}</div>
    </div>
    <a href="#" class="button">Editar</a>
  </section>
</form>
{% endblock content %}
