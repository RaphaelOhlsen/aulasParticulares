{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
  <section 
    class="avatar"
    style="background: url({{ teacher.avatar_url }})"
  ></section>
  <section class="details">

    <h3>Detalhes</h3>

    <div class="item">
      <div>Professor</div>
      <div>{{ teacher.name }}</div>
    </div>

    <div class="item">
      <div>Idade</div>
      <div>{{ teacher.age }}</div>
    </div>

     <div class="item">
      <div>Escolaridade</div>
      <div>{{ teacher.graduete }}</div>
    </div>

    <div class="item">
      <div>Tipo de Aula</div>   
      <div>{{ teacher.classType }}</div>
    </div>

    <div class="item">
      <div>Mat√©rias</div>
      {% for area in teacher.areas %}
        <span>{{ area }}</span>
      {% endfor %}
    </div>

    <div class="item">
      <div>Desde</div>
      <div>{{ teacher.created_at }}</div>
    </div>
    <a href="#" class="button">Editar</a>
  </section>
</form>
{% endblock content %}
