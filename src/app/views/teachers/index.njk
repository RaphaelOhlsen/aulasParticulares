{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/teachers/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Professor</th>
          <th>Matéria</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{teacher.avatar_url}})">
              </span>
              <p>{{teacher.name}}</p>
            </td>
            <td>
                <span class="area">{{ teacher.areas }}</span>
            </td>
            <td>{{ teacher.total_students }}</td>
            <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}